<div class="mx-auto max-w-3xl p-4 pt-8">
	<h1 class="font-bold text-4xl mb-4">Flats</h1>
	<!-- Grid -->
	<div class="grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
		<!-- Flat card -->
		<%# Todo... display all flats %>
        <% @flats.each do |flat| %>
            <%= link_to flat_path(flat["id"]) do %>
                <div class='aspect-w-1 aspect-h-1 bg-white mb-1 block group overflow-hidden rounded mb-2'>
                    <%= image_tag "#{flat['imageUrl']}", class:"h-full w-full object-cover object-center transform-gpu scale-100 group-hover:scale-105 transition-transform duration-300 ease-out" %>
                </div>
                <h4 class="leading-none font-bold mb-1"><%= flat["name"] %></h4>
                <p class="text-sm text-gray-500"><%= flat["price"] %> <%= flat["priceCurrency"] %></p>
            <% end %>
        <% end %>
	</div>
</div>