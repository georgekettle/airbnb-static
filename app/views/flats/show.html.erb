<div class="mx-auto max-w-3xl p-4 pt-8">
    <%# link_to 'link text', 'path/to/page' %>
    <%= link_to flats_path, class:'p-2 h-10 w-10 bg-gray-200 rounded-full flex items-center justify-center' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="inline h-5 w-5" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M20 15h-8v3.586a1 1 0 0 1 -1.707 .707l-6.586 -6.586a1 1 0 0 1 0 -1.414l6.586 -6.586a1 1 0 0 1 1.707 .707v3.586h8a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1z" />
        </svg>
    <% end %>
    <div class='aspect-video bg-white mb-1 block group overflow-hidden rounded mb-4'>
        <%= image_tag "#{@flat['imageUrl']}", class:"h-full w-full object-cover object-center" %>
    </div>
	<h1 class="font-bold text-4xl mb-2"><%= @flat["name"] %></h1>
    <p class="text-gray-500"><%= @flat["price"] %> <%= @flat["priceCurrency"] %></p>
    <%= link_to flat_path(@next_flat["id"]), class:'p-2 h-10 w-10 bg-gray-200 rounded-full flex items-center justify-center transform rotate-180' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="inline h-5 w-5" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M20 15h-8v3.586a1 1 0 0 1 -1.707 .707l-6.586 -6.586a1 1 0 0 1 0 -1.414l6.586 -6.586a1 1 0 0 1 1.707 .707v3.586h8a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1z" />
        </svg>
    <% end %>
</div>

<% if false %>
    <form>
        <input name="letters" value="<%= @letters %>">
    </form>
<% end %>